doctype html
html(lang="en")
  head
    title= title
  body
    h1= title
    h2= "Add a new poll"
    form(name="add-poll", action='/polls', method="post")
        div.input
            span.label Name:
            input(type="text", name="name")
        div.input
            span.label Option 1:
            input(type="text", name="option1")
        div.input
            span.label Option 2:
            input(type="text", name="option2")
        div.input
            span.label Option 3:
            input(type="text", name="option3")
        div.input
            span.label Option 4:
            input(type="text", name="option4")
        div.actions
            input(type="submit", value="add poll")
