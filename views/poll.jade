doctype html
html(lang="en")
  head
    title= title
  body
    h1= title
    h3= poll.name
    ul
      li= poll.option1 + ": " + poll.votes.A
      li= poll.option2 + ": " + poll.votes.B
      li= poll.option3 + ": " + poll.votes.C
      li= poll.option4 + ": " + poll.votes.D
    h3
      a(href="localhost:3000/polls/" + pollId) Admin link
    h3
      a(href="localhost:3000/voting/" + pollId) Voting link
    script(src="/socket.io/socket.io.js")
    script(src="/client.js")